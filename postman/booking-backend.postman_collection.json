{
  "info": {
    "name": "booking-backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api"
    },
    {
      "key": "providerToken",
      "value": ""
    },
    {
      "key": "customerToken",
      "value": ""
    },
    {
      "key": "providerUserId",
      "value": ""
    },
    {
      "key": "adminToken",
      "value": ""
    },
    {
      "key": "adminEmail",
      "value": ""
    },
    {
      "key": "adminPassword",
      "value": ""
    },
    {
      "key": "providerEmail",
      "value": ""
    },
    {
      "key": "customerEmail",
      "value": ""
    },
    {
      "key": "targetUserId",
      "value": ""
    },
    {
      "key": "impersonationToken",
      "value": ""
    },
    {
      "key": "bookingId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register Provider",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fname\": \"Provider\",\n  \"lname\": \"User\",\n  \"email\": \"provider_{{$timestamp}}@example.com\",\n  \"password\": \"StrongPass123!\",\n  \"role\": \"provider\",\n  \"businessName\": \"Studio\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "  pm.collectionVariables.set('providerToken', pm.response.json().accessToken);",
                  "  const payload = JSON.parse(pm.request.body.raw);",
                  "  pm.collectionVariables.set('providerEmail', payload.email);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Register Customer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fname\": \"Customer\",\n  \"lname\": \"User\",\n  \"email\": \"customer_{{$timestamp}}@example.com\",\n  \"password\": \"StrongPass123!\",\n  \"role\": \"customer\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "  pm.collectionVariables.set('customerToken', pm.response.json().accessToken);",
                  "  const payload = JSON.parse(pm.request.body.raw);",
                  "  pm.collectionVariables.set('customerEmail', payload.email);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{customerEmail}}\",\n  \"password\": \"StrongPass123!\"\n}"
            }
          }
        },
        {
          "name": "Login Admin (bootstrap required)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{adminEmail}}\",\n  \"password\": \"{{adminPassword}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  pm.collectionVariables.set('adminToken', pm.response.json().accessToken);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Provider Me",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{providerToken}}"
              }
            ],
            "url": "{{baseUrl}}/me"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  pm.collectionVariables.set('providerUserId', pm.response.json().userId);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Switch Active Role (Provider)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{providerToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/auth/active-role",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"activeRole\": \"provider\"\n}"
            }
          }
        },
        {
          "name": "Get Customer Me (target for admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{customerToken}}"
              }
            ],
            "url": "{{baseUrl}}/me"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  pm.collectionVariables.set('targetUserId', pm.response.json().userId);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Me (Impersonated)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{impersonationToken}}"
              }
            ],
            "url": "{{baseUrl}}/me"
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Admin Ping",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/admin/ping"
          }
        },
        {
          "name": "Grant Role",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/admin/users/{{targetUserId}}/roles/grant",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"role\": \"provider\",\n  \"businessName\": \"Studio\"\n}"
            }
          }
        },
        {
          "name": "Revoke Role",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/admin/users/{{targetUserId}}/roles/revoke",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"role\": \"provider\"\n}"
            }
          }
        },
        {
          "name": "Impersonation Start",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/admin/impersonation/start",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"subjectUserId\": \"{{targetUserId}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  pm.collectionVariables.set('impersonationToken', pm.response.json().accessToken);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Impersonation Stop",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/admin/impersonation/stop"
          }
        }
      ]
    },
    {
      "name": "Bookings",
      "item": [
        {
          "name": "Create Booking",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{customerToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/bookings",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"providerUserId\": \"{{providerUserId}}\",\n  \"startTime\": \"2030-01-01T10:00:00.000Z\",\n  \"endTime\": \"2030-01-01T11:00:00.000Z\",\n  \"idempotencyKey\": \"postman-key-1\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200 || pm.response.code === 201) {",
                  "  pm.collectionVariables.set('bookingId', pm.response.json().data.id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Booking",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{customerToken}}"
              }
            ],
            "url": "{{baseUrl}}/bookings/{{bookingId}}"
          }
        },
        {
          "name": "List Bookings",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{customerToken}}"
              }
            ],
            "url": "{{baseUrl}}/bookings?limit=5"
          }
        },
        {
          "name": "Update Booking Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{providerToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/bookings/{{bookingId}}/status",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"confirmed\"\n}"
            }
          }
        }
      ]
    }
  ]
}
