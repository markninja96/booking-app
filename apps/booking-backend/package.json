{
  "name": "@booking-app/booking-backend",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "--node-env=production"
          ],
          "cwd": "apps/booking-backend"
        },
        "configurations": {
          "development": {
            "args": [
              "--node-env=development"
            ]
          }
        }
      },
      "prune-lockfile": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "executor": "@nx/js:prune-lockfile",
        "outputs": [
          "{workspaceRoot}/apps/booking-backend/dist/package.json",
          "{workspaceRoot}/apps/booking-backend/dist/package-lock.json"
        ],
        "options": {
          "buildTarget": "build"
        }
      },
      "copy-workspace-modules": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "outputs": [
          "{workspaceRoot}/apps/booking-backend/dist/workspace_modules"
        ],
        "executor": "@nx/js:copy-workspace-modules",
        "options": {
          "buildTarget": "build"
        }
      },
      "prune": {
        "dependsOn": [
          "prune-lockfile",
          "copy-workspace-modules"
        ],
        "executor": "nx:noop"
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@booking-app/booking-backend:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@booking-app/booking-backend:build:development"
          },
          "production": {
            "buildTarget": "@booking-app/booking-backend:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      },
      "docker:build": {
        "dependsOn": [
          "build",
          "prune"
        ]
      },
      "db-generate": {
        "executor": "nx:run-commands",
        "options": {
          "command": "drizzle-kit generate --config drizzle.config.ts",
          "cwd": "apps/booking-backend"
        }
      },
      "db-migrate": {
        "executor": "nx:run-commands",
        "options": {
          "command": "drizzle-kit migrate --config drizzle.config.ts",
          "cwd": "apps/booking-backend"
        }
      },
      "db-studio": {
        "executor": "nx:run-commands",
        "options": {
          "command": "drizzle-kit studio --config drizzle.config.ts",
          "cwd": "apps/booking-backend"
        }
      }
    }
  },
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "drizzle-orm": "0.45.1",
    "pg": "8.17.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.0.0",
    "@types/pg": "8.16.0",
    "drizzle-kit": "0.31.8"
  }
}
